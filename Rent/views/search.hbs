{{> header}}
        <section class="search">
            <h2 class="search-h2">Izmenite pretragu</h2>
            <form class="search-form" method="GET" action="/search">
                   <input type="text" name="location" value="{{location}}" class="search-form-input">
                <input type="date" name="from"  value="{{from}}" class="search-form-input">
                <input type="date" name="to" value="{{to}}" class="search-form-input">
                
                <input type="number" name="cenaod" class="search-form-input" placeholder="Cena od" value="{{cenaod}}">
                <input type="number" name="cenado" class="search-form-input" placeholder="Cena do" value="{{cenado}}">
                <input type="text" name="marka" class="search-form-input" placeholder="Marka" value="{{marka}}">
                <input type="number" name="people" class="search-form-input" placeholder="People" value='{{people}}'>
                <button class="search-form-button" type="submit"><span><i class="fas fa-search"></i></span></button>
            </form>
        </section>
        
        <section class = "search-cars">
      {{# if cars}}
      {{# each cars}}
       <div class="car-div">
                <form method="GET" action="/car">
                <h5>{{this.marka}} {{this.model}}</h5> 
                <h5>{{this.cena}} per day</h5>
                <p>{{this.sedista}} <i class="fas fa-user-friends"></i> <i class="fas fa-fan"></i></p>
                <input type="hidden" name="from" value="{{../from}}">
                <input type="hidden" name="to"   value="{{../to}}">
                <input type="hidden" name="carprice" value="{{this.cena}}">
                <input type="hidden" name="carid" value="{{this._id}}">
                            <img src="{{this.slika}}" width="100%" height="150px">
            <button class="booking-button" type="submit" >Bukiraj</button>
                      </form>
                        </div> 
      {{/each}}
      {{else}}
      <p>Nema rezultata pretrage</p>
      {{/if}}
               </section>
