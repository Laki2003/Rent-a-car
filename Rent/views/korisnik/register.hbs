     <body class="log-in">
      
       <header class="log-header"><h2><a href="index.html">Car Rental</a></h2></header>
                      
         <div class="log">
    <h2 class="register-h2">Registracija</h2>
  {{#if hasErrors}}
<div class="upozorenje">
        {{# each messages}}
    <p>{{this}}</p>
    {{/each}}
</div>

  {{/if}}
    <form class="login-form" action="/users/register" method="POST">
    <input type="text" id="username" name="username" class="login-form-input" placeholder="Username">
<input type="email" id="email" name="email" class="login-form-input" placeholder="Email">
<input type="password" id="password" name="password" class="login-form-input" placeholder="Password">
<input type="password" id="confirm" name="confirm" class="login-form-input" placeholder="Confirm password">
<input type="hidden" name="_csrf" value="{{ csrfToken }}">
<button class="login-form-button" type="submit">Registruj se</button>
</form>
<p class="login-tekst">Imate nalog? <a href="log_in.html">Prijavite se</a></p>

         </div>
      </body>